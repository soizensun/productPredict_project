<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/shape_result_list1_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3">
            <TextView
                android:id="@+id/productNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ไม้1"
                android:textColor="@color/blackText1"
                android:textSize="19dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/logNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="97"
                android:textColor="@color/blackText1"
                android:textSize="18dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ท่อน"
                android:textColor="@color/blackText1"
                android:textSize="14dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ราคารวม"
                android:textColor="@color/blackText1"
                android:textSize="14dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/priceAllTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textStyle="bold"
                android:textColor="@color/blackText1"
                android:textSize="19dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/shape_result_list_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="ปริมาตรไม้ตัวอย่าง"
                    android:textColor="@color/blackText1"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/productVolumeTV"
                    android:gravity="end"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="1.365"
                    android:textColor="@color/blackText1"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ลูกบาก์ศเมตร"
                    android:paddingLeft="12dp"
                    android:textColor="@color/blackText1"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="นำ้หนักไม้ตัวอย่าง"
                    android:textColor="@color/blackText1"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/productWeightTV"
                    android:gravity="end"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="1.569"
                    android:textColor="@color/blackText1"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="กิโลกรัม"
                    android:paddingLeft="12dp"
                    android:textColor="@color/blackText1"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/shape_result_list3_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="ปริมาตร"
                        android:textColor="@color/blackText1"
                        android:textSize="15dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/allVolumeTV"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/blackText1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ลูกบาก์ศเมตร"
                        android:paddingLeft="12dp"
                        android:textColor="@color/blackText1"
                        android:textSize="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="มวล"
                        android:textColor="@color/blackText1"
                        android:textSize="15dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/allWeightTV"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/blackText1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ตัน"
                        android:paddingLeft="12dp"
                        android:textColor="@color/blackText1"
                        android:textSize="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/priceInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/shape_result_list2_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ราคาต่อตัน"
                    android:textColor="@color/blackText1"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_white"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="6dp">
                    <EditText
                        android:id="@+id/priceET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="19dp"
                        android:inputType="numberDecimal|numberSigned"
                        android:background="@null">
                    </EditText>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:text="บาท"
                    android:textColor="@color/blackText1"
                    android:textSize="15dp"
                    android:transitionName="plotNameTransition" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginTop="13dp">
            <ImageButton
                android:id="@+id/calulatePriceBTN"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_confirm_price_btn_bg"
                android:clickable="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_black_24dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>