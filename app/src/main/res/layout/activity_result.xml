<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_homeactivity_header2_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ผลการประเมิน"
                    android:textColor="@color/whiteText"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/getPlotInfoBTN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="7"
                    android:background="@drawable/shape_homeactivity_header2_bg"
                    android:clickable="true"
                    android:gravity="right"
                    android:src="@drawable/ic_baseline_info_24_white" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="64dp"
            android:fadeScrollbars="true"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <TableLayout
                android:id="@+id/resultTable"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_homeactivity_header_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_homeactivity_header_bg"
                        android:orientation="horizontal"
                        android:paddingLeft="11dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="13dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/shape_homeactivity_header_bg"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_homeactivity_header_bg"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ระยะปลูก"
                                    android:textColor="@color/whiteText"
                                    android:textSize="15dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/shape_white"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="170dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="6dp">

                                    <EditText
                                        android:id="@+id/size1ET"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:background="@null"
                                        android:inputType="numberDecimal|numberSigned"
                                        android:textSize="19dp"></EditText>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="x"
                                        android:textColor="@color/blackText1"
                                        android:textSize="17dp"
                                        android:transitionName="plotNameTransition" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="170dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="6dp">

                                    <EditText
                                        android:id="@+id/size2ET"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:background="@null"
                                        android:inputType="numberDecimal|numberSigned"
                                        android:textSize="19dp"></EditText>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="140dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="ม."
                                        android:textColor="@color/blackText1"
                                        android:textSize="17dp"
                                        android:transitionName="plotNameTransition" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.3"
                            android:background="@drawable/shape_homeactivity_header_bg"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_homeactivity_header_bg"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/d"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="พื่นที่"
                                    android:textColor="@color/whiteText"
                                    android:textSize="15dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:background="@drawable/shape_white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="6dp"
                                    >

                                    <EditText
                                        android:id="@+id/areaET"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:background="@null"
                                        android:inputType="numberDecimal|numberSigned"
                                        android:textSize="19dp"></EditText>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.8"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:text="ไร่"
                                        android:textColor="@color/blackText1"
                                        android:textSize="17dp"
                                        android:transitionName="plotNameTransition" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.7"
                            android:layout_gravity="center"
                            android:gravity="end">
                            <ImageButton
                                android:id="@+id/getSizePlotBTN"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="17dp"
                                android:background="@drawable/shape_homeactivity_header2_bg"
                                android:clickable="true"
                                android:src="@drawable/ic_baseline_check_circle_24" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </TableLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/shape_resultactivity_price_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="ราคารวม"
            android:textColor="@color/whiteText"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/priceTotalTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/whiteText"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="บาท"
            android:textColor="@color/whiteText"
            android:textSize="18dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>